<?xml version='1.0' encoding='utf-8'?>
<widget id="com.p3xx.bratan" version="1.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="CDVOrientation">
        <param name="android-package" value="cordova.plugins.screenorientation.CDVOrientation" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <name>BRATAN</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="yuri.petrik@gmail.com" href="http://bratan.tk">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <icon density="mdpi" src="/res/icon/android/res/mipmap-mdpi/bratan.png" />
    <icon density="hdpi" src="/res/icon/android/res/mipmap-hdpi/bratan.png" />
    <icon density="xhdpi" src="/res/icon/android/res/mipmap-xhdpi/bratan.png" />
    <icon density="xxhdpi" src="/res/icon/android/res/mipmap-xxhdpi/bratan.png" />
    <icon density="xxxhdpi" src="/res/icon/android/res/mipmap-xxxhdpi/bratan.png" />
    <preference name="loglevel" value="DEBUG" />
</widget>
